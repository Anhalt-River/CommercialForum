                                <Button x:Name="MoreInfoBut" Content="Узнать больше" Click="MoreInfoBut_Click"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>-->
                
            </ListView>
        </StackPanel>
    </Grid>
</Page>
