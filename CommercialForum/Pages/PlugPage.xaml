<Page x:Class="CommercialForum.Pages.PlugPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CommercialForum.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlugPage">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Вы на торговой площадке Commercial Forum" FontSize="20"/>
            <Button x:Name="ToPlatformBut" Height="Auto" Click="ToPlatformBut_Click">
                <TextBlock FontSize="20" Text="Перейти на торговую площадку"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
